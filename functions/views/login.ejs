<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Uptrax Gas Admin | Log in</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
  <div class="login-box">

    <%- include('components/login-form') %>

  </div>

    <!-- jQuery -->
  <script src="/plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="/dist/js/adminlte.min.js"></script>


    <script>
      $(document).ready(() => {

        $('#login-form').on('submit', async (e) => {
          const passwordError = $('#password-error')
          let emailError = $('#email-error')

          const email = $('#email').val()
          const password = $('#password').val()
          e.preventDefault()

          const res = await fetch('/login', {
            method: 'POST',
            body: JSON.stringify({ email, password }),
            headers: { 'Content-Type': 'application/json' }
          })



          if (res.ok)
          {
            location.assign('/dashboard/index')
          }

          if (res.staus == 400 || 404) {

            const { errorCode, errorMessage } = await res.json()



            if (errorCode == 'auth/wrong-password') {
              passwordError.html(errorMessage);
              emailError.html('')
            }

            if (errorCode == 'auth/user-not-found') {
              emailError.html('There is no user with that email');
              passwordError.html('')
            }
            console.log(errorCode, errorMessage)
          }
        })
      })
  </script>
</body>
</html>
