  <script src="../dist/js/demo.js"></script>

  <script>
    $(document).ready(() => {
      $.getJSON('/product/info').then( data => {
        $('#quantity-bought').html(`
          <h1>${data.quantityBought}</h1>
          <p>Quantity Bought (kg)</p>
        `)
        $('#quantity-left').html(`
          <h1>${data.quantityLeft}</h1>
          <p>Quantity Left (kg)</p>
        `)
        $('#quantity-sold').html(`
          <h1>${data.totalSold}</h1>
          <p>Total Sold (kg)</p>
        `)
        $('#total-amount').html(`
          <h1>${data.AmountSold}</h1>
          <p>TOTAL AMOUNT SOLD (NAIRA)</p>
        `)
      })

      $.getJSON('/gas/price').then(data => $('#gas-price').html(`#${data.price}`))

      // creates a new customer
      $('#customer-form').on('submit', async function (e) {
        e.preventDefault()
        const regNum = $('#reg-num').val()
        const name = $('#customer-name').val()
        const phoneNumber = $('#phone').val()
        const regDate = $('#reg-date').val()
        const address = $('#address').val()
        const dob = $('#dob').val()

        const obj = { regNum, name, phoneNumber, regDate, address, dob }
        // console.log(obj)
        const res = await fetch('/customer', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(obj)
        })

        if (res.ok) {
          location.reload()
        } else{
          console.log(await res.json())
        }
      })

      $.getJSON('/customers/all').then(customers => {
        customers.forEach(customer => {
          $('tbody').append(`
          <tr>
            <td>${customer.regNum}</td>  
            <td>${customer.regDate}</td>  
            <td>${customer.name}</td>  
            <td>${customer.phoneNumber}</td>  
            <td>${customer.address}</td>  
            <td>${customer.dob}</td>  
          </tr>
        `)
        });
      }).catch(err => console.log(err))
    })
  </script>
</body>
