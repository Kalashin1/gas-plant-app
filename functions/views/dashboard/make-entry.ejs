  <script src="../dist/js/pages/dashboard.js"></script>
  <!-- AdminLTE for demo purposes -->
  <script src="../dist/js/demo.js"></script>

  <script>
    $(document).ready(() => {
      $('#entry-form').on('submit', async(e) => {
        e.preventDefault()
        const date = $('#date').val()
        const entryVolume = $('#entryVolume').val()
        const logistics = $('#logistics').val()
        const landing = $('#landing').val()
        const supplier = $('#supplier').val()
        const remark = $('#remark').val()
        const cost = $('#cost').val()

        const data = { date, entryVolume, logistics, landing, supplier, remark, cost}

        const res = await fetch('/entry', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        })

        if (res.ok) {
          location.assign('home')
        }

        if (res.status == 400 || 404) {
          const error = await res.json()
          console.log(error)
        }
      })
    })
  </script>
</body>
