<body class="hold-transition sidebar-mini layout-fixed">

  <div class="wrapper">
    <%- include('../components/navbar')  %>
    <%- include('../components/sidenav')  %>
    <%- include('../components/entry-form') %>
  </div>
  <script src="../plugins/jquery/jquery.min.js"></script>
