<div class="content-wrapper">
  <!-- HEADER section -->
  <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Make a New Entry</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
              <li class="breadcrumb-item active">New entry</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

  <!-- ENTRY FORM -->
  <section class="content">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Make a new Entry</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form id="entry-form">
              <div class="card-body">
                <div class="form-group">
                  <label>Date:</label>
                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                        <input type="text" id="date" class="form-control datetimepicker-input" data-target="#reservationdate"/>
                        <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                  <label for="entryVolume">Entry Volume</label>
                  <input type="text" class="form-control" id="entryVolume" placeholder="Enter entry volume">
                </div>
                <div class="form-group">
                  <label for="cost">Cost</label>
                  <input type="text" class="form-control" id="cost" placeholder="Enter cost">
                </div>
                <div class="form-group">
                  <label for="logistics">Logistics</label>
                  <input type="text" class="form-control" id="logistics" placeholder="Enter Logistics information">
                </div>
                <div class="form-group">
                  <label for="landing">Landing</label>
                  <input type="text" class="form-control" id="landing" placeholder="Enter landing detail">
                </div>
                <div class="form-group">
                  <label for="supplier">Supplier</label>
                  <input type="text" class="form-control" id="supplier" placeholder="Enter supplier information">
                </div>
                <div class="form-group">
                  <label for="remark">Remark</label>
                  <input type="text" class="form-control" id="remark" placeholder="Enter Remark">
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
  </section>
</div>
