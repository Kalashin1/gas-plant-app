<div class="container-fluid" id="table">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title text-primary">View The recent Sales</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <table id="customer-table" class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <!-- <th>Customer</th> -->
                <th>Payment Method</th>
              </tr>
            </thead>
            <tbody id="sales-table"></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/plugins/jquery/jquery.min.js"></script>
<script type="text/javascript">
  $('#table').hide('fast')
  $(document).ready(() => {
    $.getJSON('/user').then(data => {
      if (data._userDoc == undefined || null) {
        $('#table').show('fast')
      }
    })

    //  populate the sales table with the data sent from+ the frontend
    $.getJSON('/sales/all', (data) => {
      data.forEach(({ doc, id}) => {
        $('#sales-table').append(`
          <tr>
            <td>${doc.item}</td>
            <td>${doc.price}</td>
            <td>${doc.quantity}</td>
            <td>${doc.total}</td>
            <td>${doc.paymentMethod}</td>
          </tr>`
        )
      })
      console.log(data)
    })
  })
</script>
