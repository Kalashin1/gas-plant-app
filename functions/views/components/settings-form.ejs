<div class="card">
  <div class="card-body login-card-body">
    <p class="login-box-msg">Enter your company info</p>

    <form id="settings-form" class="my-2">

      <div class="input-group mb-3">
        <input type="text" class="form-control" id="name" placeholder="Enter company name">
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <input type="text" class="form-control" id="address" placeholder="Enter company address">
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <input type="text" class="form-control" id="phone" placeholder="Enter company phone">
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
      </div>

      <div class="input-group mb-3">
        <input type="text" class="form-control" id="slogan" placeholder="Enter company slogan">
        <div class="input-group-append">
          <div class="input-group-text">
            <span class="fas fa-lock"></span>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- /.col -->
        <div class="col-12">
          <button type="submit" class="btn btn-primary btn-block">Upload company info</button>
        </div>
        <!-- /.col -->
      </div>
    </form>


    <form id="file">
      <div class="form-group my-3">
        <label for="exampleInputFile">Select Your Logo</label>
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="logo" class="custom-file-input" id="company-logo">
            <label class="custom-file-label" for="company-logo">Choose file</label>
          </div>
          <div class="input-group-append">
            <button type="submit" class="input-group-text">Upload</button>
          </div>
        </div>
      </div>
    </form>


    <p class="mb-1">
      <a href="forgot-password.html">I forgot my password</a>
    </p>
    <p class="mb-0">
      <a href="/signup" class="text-center">Register a new membership</a>
    </p>
  </div>
  <!-- /.login-card-body -->
</div>