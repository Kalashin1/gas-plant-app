  <script>
    $(document).ready(() => {

      $.getJSON('/gas/price').then(data => $('#gas-price').html(`#${data.price}`))

      $('#create-staff').on('submit', async (e) => {
        e.preventDefault()
        const firstName = $('#first-name').val()
        const lastName = $('#last-name').val()
        const designation = $('#designation').val()
        const position = $('#position').val()
        const username = $('#username').val()
        const password = $('#password').val()
        const number = parseInt($('#number').val())
        const email = $('#email').val()
        const address = $('#address').val()
        const lga = $('#lga').val()
        const state = $('#state').val()
        const bloodgroup = $('#bloodgroup').val()
        const dob = new Date($('#dob').val())
        const genotype = $('#genotype').val()
        const bank = $('#bank').val()
        const acctName = $('#acct-name').val()
        const acctNumber = parseInt($('#acct-num').val())

        const staffObj = {
          firstName,
          lastName,
          designation,
          position,
          username,
          password,
          number,
          email,
          address,
          lga,
          state,
          bloodgroup,
          dob,
          genotype,
          bank,
          acctName,
          acctNumber,
        }

        console.log(staffObj)

        const res = await fetch('/staff/create', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(staffObj)
        })

        if (res.ok) {
          location.reload()
          // $('#create-staff').hide('slow')
        } else {
          console.log(await res.json())
        }
      })

      const appendData = (arr) => {
        arr.forEach(({ doc, id }) => {
          $('#staff-table').append(`
            <tr>
              <td>${doc.firstName} ${doc.lastName}</td>
              <td>${doc.number}</td>
              <td>${doc.lga}</td>
              <td>${doc.state}</td>
              <td>${doc.position}</td>
              <td>${doc.designation}</td>
              <td><a href="/staff/edit/${id}" class="btn-sm btn-block"><i class="fas fa-edit"></i></a></td>
            <td><a href="/staff/delete/${id}" class="btn-sm btn-block"><i class="fas fa-trash"></i></a></td>
            </tr>
          `)
        });
      }

      $.getJSON('/staff/all').then(data => {
        const staffs = data
        let pageOne = staffs.slice(0, 16)
        appendData(pageOne)

        // * handler for next button on table pagination
        $('#next').on('click', (e) => {
          e.preventDefault()
          // if the customer array has less than 16 items don't paginate
          if (pageOne.length < 16) {
            console.log(`don't cut`)
            return
          }
          // get the next page by slicing the staffs array from the end of page one to next
          const nextPage = staffs.slice(pageOne.length, staffs.length * 2 ?? staffs.length)
          appendData(nextPage)
          pageOne = nextPage
        })

        // * handler for prev button on table pagination
        $('#prev').on('click', (e) => {
          if (staffs.length < 16) {
            console.log(`don't cut`)
            return
          }
          // get the prev page by slicing backwards, subtract 16 from the firsitem in pageOne get
          //  end the slicing at the first item in the pageOne
          const prevPage = staffs
            .slice(staffs.indexOf(pageOne[0]) - 16, staffs.indexOf(pageOne[0]));
          appendData(prevPage)
          pageOne = prevPage
        })
      })
    })
  </script>
