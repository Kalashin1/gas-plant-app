        <div class="custom-control custom-checkbox">
          <input class="custom-control-input" type="checkbox" id="adminStatus" value="true">
          <label for="adminStatus" class="custom-control-label">Admin</label>
        </div>
      </div>
      <div class="row">
        <!-- /.col -->
        <div class="col-12">
          <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>
        <!-- /.col -->
      </div>
    </form>

    <a href="/login" class="text-center">I already have a membership</a>
